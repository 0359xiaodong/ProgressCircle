<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressCircle">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="barAlign" format="integer">
            <enum name="ALIGN_CENTER" value="0" />
            <enum name="ALIGN_OUTER" value="1" />
            <enum name="ALIGN_INNER" value="-1" />
        </attr>
        <attr name="max" format="dimension" />
        <attr name="progress" format="dimension" />
    </declare-styleable>

</resources>